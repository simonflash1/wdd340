<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> <%- messages() %> 
    
    <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

<form action="/inv/add-inventory" method="post">
    <label for="classification_id">Classification:</label>
        <%- list %>
    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required placeholder="Enter a Make" value="<%locals.inv_make%>">
    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" id="inv_model" required placeholder="Enter a Model" value="<%locals.inv_model%>">
    <label for="inv_description">Description:</label>
    <input type="text" name="inv_description" id="inv_description" required placeholder="Enter a Description" value="<%locals.inv_description%>">
    <label for="inv_image">Image Path:</label>
    <input type="text" name="inv_image" id="inv_image" required placeholder="Enter an Image URL" value="<%locals.inv_image%>">
    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required placeholder="Enter a Thumbnail URL" value="<%locals.inv_thumbnail%>">
    <label for="inv_price">Price:</label>
    <input type="text" name="inv_price" id="inv_price" required placeholder="Enter a Price" value="<%locals.inv_price%>">
    <label for="inv_year">Year:</label>
    <input type="text" name="inv_year" id="inv_year" required placeholder="Enter a Year" value="<%locals.inv_year%>">
    <label for="inv_miles">Miles:</label>
    <input type="text" name="inv_miles" id="inv_miles" required placeholder="Enter a Mileage" value="<%locals.inv_miles%>">
    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" id="inv_color" required placeholder="Enter a Color" value="<%locals.inv_color%>">
    <button type="submit">Add Vehicle</button>
</form>