<% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %> <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().filter(e=>e.msg !== "Invalid value").forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name:</label>
  <input
    type="text"
    name="classification_name"
    id="classification_name"
    required
    placeholder="Enter a New Classification Name" 
    pattern="^[A-Za-z]{3,}$" 
    value="<%= locals.classification_name %>"/>
  <span>Classification name must be alphabetic characters only</span>
  <button type="submit">Add Classification</button>
</form>
