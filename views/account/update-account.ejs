<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <!-- Message -->
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
      </ul>
    <% } %>


    <form id="account-update-form" action="/account/update/" method="post">
        <label>First name<input type="text" name="account_firstname" title="Enter your first name" autocomplete="given-name" value="<%= locals.account_firstname %>" required></label>
        <label>Last name<input type="text" name="account_lastname" title="Enter your last name" autocomplete="family-name" value="<%= locals.account_lastname %>" required></label>
        <label>Email address<input id="updated-email" type="email" name="account_email" title="Enter your email address" autocomplete="email" value="<%= locals.account_email %>" required ></label>
        <button disabled="disabled" type="submit" title="Update account" aria-label="Update account">Update account</button>
        <input type="hidden" name="account_id" 
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"<% } %>>      
    </form>


    
    <form action="/account/change-password" method="post">
        <h3>Change Password</h3>
        <label>Enter a new password<input type="password" name="account_password" title="Password must be at least 12 characters long and contain at least 1 capital letter, 1 number, and 1 special character." pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
        <p>*Doing this will change your current password.</p>
        <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        <input type="hidden" name="account_id" 
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"<% } %>>      
        <button type="submit" title="change Password" aria-label="Change password">Change password</button>
    </form>

    <script src="../../js/account-update.js"></script>